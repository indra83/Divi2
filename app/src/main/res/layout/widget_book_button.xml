<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:qwerjk="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <co.in.divi.util.InnerShadowTextView
        android:id="@+id/book_button_text1"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:background="@drawable/bg_book_button_top"
        android:gravity="center"
        android:textColor="#E0E0E0"
        android:textSize="80dp"
        android:textStyle="bold"
        qwerjk:innerShadowColor="#35000000"
        qwerjk:innerShadowDy="4"
        qwerjk:innerShadowRadius="8" />

    <TextView
        android:id="@+id/book_button_text2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_book_button_bottom"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#77828A"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>