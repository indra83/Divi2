<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:qwerjk="http://schemas.android.com/apk/res/co.in.divi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDF0FF" >

    <LinearLayout
        android:id="@+id/book_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <co.in.divi.util.InnerShadowTextView
            android:id="@+id/book_button_text1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_book_button_top"
            android:gravity="center"
            android:textColor="#E0E0E0"
            android:textSize="60dp"
            android:textStyle="bold"
            qwerjk:innerShadowColor="#35000000"
            qwerjk:innerShadowDy="3"
            qwerjk:innerShadowRadius="5" />

        <TextView
            android:id="@+id/book_button_text2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_book_button_bottom"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#77828A"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assessmentsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/book_box"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>