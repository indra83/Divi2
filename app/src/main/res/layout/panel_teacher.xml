<co.in.divi.ui.TeacherPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_panel_teacher"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_attendance" />

    <TextView
        android:id="@+id/attendance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btn_dashboard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_dashboard" />

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_share" />

    <ImageButton
        android:id="@+id/btn_blackout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_blackout" />

</co.in.divi.ui.TeacherPanel>